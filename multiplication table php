<?php
function carpim($a){
for($i=1;$i<11;$i++){
	echo "<font color='tomato'>".$a."</font>".'x'."<font color='tomato'>".$i."</font>".'='."<font color='tomato'>".$a*$i."</font>";
	?><br><?php
}
}
  ?>
<html>
<head>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.
	min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" 
	crossorigin="anonymous">
	<title>Multiplication Table</title>
	<style>
	#m1{
